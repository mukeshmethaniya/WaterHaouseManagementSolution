@using WaterHouseUsingMVC.Models;
@model List<WaterHouseUsingMVC.Models.Order>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>
<table>
    @foreach(Order order in Model)
    {
    <tr>
       
       <td> @Html.ActionLink(order.FIRSTNAME,"Details","OrderDetails", new { id = order.ORDERNUMBER },null);</td>

    </tr>
    }

    <tr>
        <td>@Html.ActionLink("Back To Root", "Details", "RootDetails", new  { rootId=@Model[0].ROOTID },null)</td>
    </tr>
</table>